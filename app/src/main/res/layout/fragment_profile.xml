<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_default">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_item_separator"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_item_separator"
            tools:text="Bienvenido Garrus!"/>

        <TextView
            style="@style/TitleText"
            android:id="@+id/tv_rated_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_movies_rated"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_item_separator"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rated_movies"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_item_separator"
            android:orientation="horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>